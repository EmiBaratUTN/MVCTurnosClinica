
@{
    ViewBag.Title = "Alta Turno";
}
@model ABMCTurnosClinica.Models.VMAltaTurno

<h2>Alta de Turno</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label>Nombre</label>
                @Html.TextBoxFor(x => x.turno.NombrePaciente, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Edad</label>
                @Html.TextBoxFor(x => x.turno.Edad, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Fecha</label>
                @Html.TextBoxFor(x => x.turno.Fecha, htmlAttributes: new { @class = "form-control" })
            </div>
            
            <div class="form-group">
                <label>Prestacion</label>
                @Html.DropDownListFor(x => x.turno.IdPrestacion, new SelectList(Model.Prestacions, "id", "descripcion"), "SELECCIONE PRESTACION", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Aceptar" class="btn btn-success" />
            </div>
        </div>
        <div class="col-md-2">

        </div>
    </div>


}
